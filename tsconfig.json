{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "lib": ["es2016", "dom", "esnext"],

    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node", // Explicitly set node resolution strategy
    "resolveJsonModule": true,  // Allow importing JSON files
    "baseUrl": "./",

    /* Emit */
    "outDir": "./dist",
    "sourceMap": true,          // Generate source maps for better debugging

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": false,     // This helps with Express request/response handling
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}